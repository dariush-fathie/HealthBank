<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/white"
        android:paddingEnd="8dp"
        android:paddingStart="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_imageHolder"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="3dp"
            app:cardPreventCornerOverlap="false">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_itemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/cv_imageHolder"
            android:orientation="vertical"
            android:paddingEnd="16dp"
            android:paddingStart="8dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/title"
                android:textSize="17sp"
                android:textStyle="bold"
                app:fontFamily="@font/yekan" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:paddingBottom="8dp"
                android:textColor="@color/subTitle"
                android:textSize="15sp"
                app:fontFamily="@font/yekan" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/round_rect"
                android:gravity="center"
                android:minWidth="60dp"
                android:padding="5dp"
                android:text="فوق تخصص"
                android:textColor="@color/c1"
                android:textSize="13sp" />

            <android.support.v7.widget.AppCompatRatingBar
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:clickable="false"
                android:numStars="5"
                android:paddingTop="8dp"
                android:rating="4"
                android:visibility="gone" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_starLike"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:padding="6dp"
            android:src="@drawable/icons_star_1" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

