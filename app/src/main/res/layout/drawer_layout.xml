<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/green"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_jin" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="10dp"
                android:text="بانک سلامت ژین"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:fontFamily="@font/yekan" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_drawer1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp">


            <View
                android:id="@+id/v1"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/green" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v1"
                android:padding="6dp"
                android:src="@drawable/ic_hospital"
                android:tint="@color/green" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_drawerTitle1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/iv1"
                android:gravity="center_vertical"
                android:paddingEnd="17dp"
                android:text="ژین من"
                android:textColor="@color/green"
                android:textSize="16sp"
                app:fontFamily="@font/yekan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_salamat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp">


            <View
                android:visibility="invisible"
                android:id="@+id/vs"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/green" />

            <ImageView
                android:id="@+id/ivs"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/vs"
                android:padding="6dp"
                android:src="@drawable/ic_salamat" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_drawerTitlesalamat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/ivs"
                android:gravity="center_vertical"
                android:paddingEnd="17dp"
                android:text="خدمات بیمه سلامت (روستایی)"
                android:textColor="@color/title"
                android:textSize="16sp"
                app:fontFamily="@font/yekan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_drawer2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp">

            <View
                android:id="@+id/v2"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/white" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v2"
                android:padding="6dp"
                android:src="@drawable/ic_star"
                android:tint="@color/subTitle" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_drawerTitle2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/iv2"
                android:gravity="center_vertical"
                android:paddingEnd="17dp"
                android:text="نشان شده ها"
                android:textSize="16sp"
                app:fontFamily="@font/yekan" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_drawer_badge"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginTop="8dp"
                android:layout_toStartOf="@+id/tv_drawerTitle2"
                android:background="@drawable/red_circle" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_drawer3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp">

            <View
                android:id="@+id/v3"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/white" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v3"
                android:padding="8dp"
                android:src="@drawable/ic_about"
                android:tint="@color/subTitle" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_drawerTitle3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/iv3"
                android:gravity="center_vertical"
                android:paddingEnd="17dp"
                android:text="درباره ژین"
                android:textSize="16sp"
                app:fontFamily="@font/yekan" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_drawer4"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp">

            <View
                android:id="@+id/v4"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/white" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/v4"
                android:padding="8dp"
                android:src="@drawable/ic_contact"
                android:tint="@color/subTitle" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_drawerTitle4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/iv4"
                android:gravity="center_vertical"
                android:paddingEnd="17dp"
                android:text="تماس با ما"
                android:textSize="16sp"
                app:fontFamily="@font/yekan" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/rl_exit"
        android:background="@color/back" />

    <RelativeLayout
        android:id="@+id/rl_exit"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_exit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_exit" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/iv_exit"
            android:gravity="center"
            android:text="خروج از برنامه"
            android:textSize="16sp"
            app:fontFamily="@font/yekan" />
    </RelativeLayout>


</RelativeLayout>