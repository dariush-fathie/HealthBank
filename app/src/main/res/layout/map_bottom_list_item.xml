<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_bottomListImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_bottomListTitle"
            android:background="@color/colorAccent"
            android:scaleType="center"
            android:src="@drawable/ic_image"
            android:tint="@color/white" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_bottomListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_bottomListSubTitle"
            android:paddingBottom="4dp"
            android:paddingEnd="8dp"
            android:paddingStart="4dp"
            android:paddingTop="8dp"
            android:textColor="@color/title"
            android:textSize="15sp"
            app:fontFamily="@font/yekan" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_bottomListSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="4dp"
            android:textColor="@color/subTitle"
            android:textSize="13sp"
            app:fontFamily="@font/yekan" />
    </RelativeLayout>


</android.support.v7.widget.CardView>